{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["GH_TOKEN", "__NEXT_PRIVATE_ORIGIN"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "types": {
      "dependsOn": ["^types"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "dependsOn": ["^test:watch"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test:coverage"]
    },
    "dev": {
      "cache": false,
      "interactive": true,
      "persistent": true
    },
    "gen:changelog": {
      "dependsOn": []
    }
  },
  "ui": "tui"
}
